<Window x:Class="CustomValidate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CustomValidate" Height="366" Width="598" WindowStartupLocation="CenterScreen">
    <Canvas>
        <ListBox Canvas.Left="396" Canvas.Top="37" Height="278" Name="ListBox_conditions" Width="168" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" Background="#FF21ADA6">
                        <Label FontSize="15" Content="{Binding Path=BarcodeItemName}" Background="{Binding Path=BackgroundColor}"/>
                        
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
   
        </ListBox>
        <Label Canvas.Left="396" Canvas.Top="12" Content="附加扫描条件" Height="28" Name="Label1" />
        <TextBox Canvas.Left="12" Canvas.Top="132" Height="51" Name="TextBox_scan" Width="357" Text="" FontSize="25" />
        <Button Canvas.Left="294" Canvas.Top="283" Content="关闭" Height="23" Name="Button_exit" Width="75" />
    </Canvas>
</Window>
